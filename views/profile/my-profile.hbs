<div class="col-10 d-flex flex-column align-items-start justify-content-start">

  <div class="col-5 d-flex flex-column align-items-start justify-content-start">

    {{#with profileDetails}}
      <h2>User Profile: {{username}}</h2>
      <img src="{{profileImage}}" alt="profile-image" width="180px" />
      <p>Email: {{email}}</p>
      <p>Age: {{age}}</p>
      
    {{/with}}


     
  </div>

<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      Edit
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="/profile/edit">Profile</a></li>
      <li><a class="dropdown-item" href="/profile/editemail">Email</a></li>
      <li><a class="dropdown-item" href="/profile/editpassword">Password</a></li>

    </ul>
  </div>
</div>

  <div class="col-5 d-flex flex-row align-items-start justify-content-between">
    <div>
    <h4>Own Posts</h4>
    {{#each publicationUserOnline}}
      <a href="/profile/publications/{{_id}}/details">
        <table class="table-primary"><h5>{{title}}</h5></table>
      </a>
      <p>created: {{createdAt}}</p>
      <p>updated: {{updatedAt}}</p>

    {{/each}}
    </div>
    <div class="col-5 d-flex flex-column align-items-start justify-content-start">
      <h4>Favourite Posts</h4>

      {{#each profileDetails.favourites}}
        <a href="/user/{{_id}}/details">
          <h5>{{title}}</h5>
          <form action="/profile/publications/{{_id}}/favouritedelete" method="POST">
          <button>Remove</button>
          </form>
        </a>
      {{/each}}
    </div>

  </div>

</div>