{{!-- Linkk to trigger sign-up modal--}}
<a data-bs-toggle="modal" href="#signUp">Sign Up</a>

{{!-- Modal --}}
<div id="signUp" class="modal fade bg-dark" role="dialog" tabindex="-1" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">

    {{!-- Modal Content--}}
    <div class="modal-content">
    {{!-- Header --}}
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Sign Up</h5>
        <button type="button" class="close" data-bs-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{!-- Body --}}
      <div class="modal-body">
          <form action="/auth/signup" method="POST" class="d-flex flex-column align-items-center justify-content-around bg-light">
            <label for="username">User Name</label>
            <input type="text" name="username" />
    
            <label for="age">Age</label>
            <input type="number" name="age" min="0" max="99">
    
            <label for="email">Email</label>
            <input type="text" name="email" />
    
            <label for="password">Password</label>
            <input type="password" name="password" />
    
            <p style="color: red">{{errorMessage}}</p>

            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button id="send-btn" {{!--type="button"--}} type="submit" class="btn btn-primary">Register</button>
          </form>
      </div>
    </div>
  </div>
</div>

